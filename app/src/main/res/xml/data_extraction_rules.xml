<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Android 12+ (API 31+).
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   
   We exclude encrypted SharedPreferences and account data because:
   1. The Android Keystore master key is never backed up
   2. Restoring encrypted data without the key causes decryption failures
   3. Session tokens and credentials should not persist across reinstalls
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude encrypted SharedPreferences files -->
        <exclude domain="sharedpref" path="pangolin_secrets.xml"/>
        <exclude domain="sharedpref" path="__androidx_security_crypto_encrypted_prefs_key_keyset__.xml"/>
        <exclude domain="sharedpref" path="__androidx_security_crypto_encrypted_prefs_value_keyset__.xml"/>
        
        <!-- Exclude account store -->
        <exclude domain="file" path="Pangolin/accounts.json"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Also exclude from device-to-device transfer for the same reasons -->
        <exclude domain="sharedpref" path="pangolin_secrets.xml"/>
        <exclude domain="sharedpref" path="__androidx_security_crypto_encrypted_prefs_key_keyset__.xml"/>
        <exclude domain="sharedpref" path="__androidx_security_crypto_encrypted_prefs_value_keyset__.xml"/>
        <exclude domain="file" path="Pangolin/accounts.json"/>
    </device-transfer>
</data-extraction-rules>