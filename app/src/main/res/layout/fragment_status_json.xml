<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Disconnected Card (shown when socket is unavailable) -->
        <include
            android:id="@+id/disconnected_card_include"
            layout="@layout/card_disconnected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- JSON Container (shown when status is available) -->
        <TextView
            android:id="@+id/jsonStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="monospace"
            android:textIsSelectable="true"
            android:text="JSON output will appear here" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
